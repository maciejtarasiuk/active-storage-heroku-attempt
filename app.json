{
  "name": "ActiveStorage example",
  "description": "A barebones Rails app with Active Storage",
  "repository": "https://github.com/sealocal/active-storage-example",
  "logo": "https://upload.wikimedia.org/wikipedia/commons/c/c3/Ruby_on_Rails_logo.svg",
  "keywords": ["ruby", "rails", "active", "storage", "ActiveStorage", "uploads"],
